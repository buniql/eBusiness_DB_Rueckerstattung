<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                app:srcCompat="@drawable/DB_Cashback1" />

            <TextView
                android:id="@+id/login_header"
                android:layout_width="88dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20pt"
                android:gravity="center"
                android:text="Login"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_name_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center"
                android:inputType="text"
                android:text="E-Mail" />

            <EditText
                android:id="@+id/login_password_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10pt"
                android:ems="10"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/textView_to_register1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Registrieren"
                android:textColor="#0099FF" />

            <TextView
                android:id="@+id/textView_to_forgotpw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10pt"
                android:text="Passwort vergessen?"
                android:textColor="#0099FF" />

            <Button
                android:id="@+id/button_to_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Login" />

            <TextView
                android:id="@+id/textView_to_imprintlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20pt"
                android:text="Impressum"
                android:textColor="#0099FF" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>