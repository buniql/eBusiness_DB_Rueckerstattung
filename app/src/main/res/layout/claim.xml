<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/home_button"
        android:layout_width="135dp"
        android:layout_height="64dp"
        android:text="Übersicht"
        tools:layout_editor_absoluteX="138dp"
        tools:layout_editor_absoluteY="668dp" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="135dp"
        android:layout_height="64dp"
        android:text="Einstellungen"
        tools:layout_editor_absoluteX="273dp"
        tools:layout_editor_absoluteY="668dp" />

    <Button
        android:id="@+id/claim_button"
        android:layout_width="135dp"
        android:layout_height="64dp"
        android:text="Beantragen"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="668dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="619dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:clickable="true"
            android:contextClickable="false"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/settings_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp"
            android:text="Möchten Sie ihr Ticket einscannen oder direkt aus der DB App laden?"
            android:textSize="24sp" />

        <Button
            android:id="@+id/scan_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:text="Einscannen/Hochladen" />

        <Button
            android:id="@+id/dbnav_button"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:gravity="center"
            android:text="DB Navigator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>