<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_header"
                android:layout_width="191dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="100pt"
                android:text="Registrieren"
                android:textSize="34sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/login_name_input"
                android:layout_width="235dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Geben Sie Ihre E-Mail ein!"
                android:inputType="text" />

            <EditText
                android:id="@+id/login_password_input1"
                android:layout_width="235dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Passwort"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/login_password_input2"
                android:layout_width="235dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Passwort wiederholen"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button_to_register2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10pt"
                android:text="Weiter" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>